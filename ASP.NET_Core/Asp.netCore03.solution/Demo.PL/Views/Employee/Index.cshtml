@model IEnumerable<Employee>
@{

    ViewData["Title"] = "All Employees";
}

<h1 class="m-2">
    All Employees
</h1>

<br />
<hr />

<a asp-action="Create" class="btn btn-primary p-1">
    Create Employee
</a>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e=>e.Name)</th>
                <th>@Html.DisplayNameFor(e=>e.Age)</th>
                <th>@Html.DisplayNameFor(e=>e.Address)</th>
                <th>@Html.DisplayNameFor(e=>e.Email)</th>
                <th>@Html.DisplayNameFor(e=>e.Salary)</th>
                <th>@Html.DisplayNameFor(e=>e.IsActive)</th>
                <th>@Html.DisplayNameFor(e=>e.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(e=>e.HireDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Name</td>
                    <td>@e.Age</td>
                    <td>@e.Address</td>
                    <td>@e.Email</td>
                    <td>@e.Salary</td>
                    <td>@e.IsActive</td>
                    <td>@e.PhoneNumber</td>
                    <td>@e.HireDate</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@e.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        There Is No Employees !
    </div>
}

