@model Department

@{
    ViewData["Title"] = "Delete";
}

<h1>Department Deletion</h1>
<h4 class="text-danger">Are You Sure You want to Delete it?</h4>
<br />
<hr />

<form asp-action="Delete">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" readonly />
    </div>
    <input type="submit" value="Delete" class="btn btn-danger"> |
    <a class="btn btn-dark" asp-action="Index">Cancel</a>
</form>


